<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppRecconProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Thunderbird</item>
        <item name="colorPrimaryVariant">@color/Dark_Tan</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorSecondary">@color/Hippie_Green</item>
        <item name="colorSecondaryVariant">@color/Tom_Thumb</item>
    </style>

    <style name="Theme.AppRecconProject.splash" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="texViewAlert">
        <item name="android:background">@color/Thunderbird</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttons">
        <item name="android:backgroundTint">@color/Thunderbird</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texViewDescription">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Theme.AppRecconProject" parent="Base.Theme.AppRecconProject" />
</resources>