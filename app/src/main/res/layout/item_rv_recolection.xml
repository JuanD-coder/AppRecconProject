<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCollectionDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Thunderbird">

        <ImageView
            android:id="@+id/image"
            style="@style/itemRecolectionInfo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/Thunderbird"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ic_bolsa_de_cafe"
            app:layout_constraintBottom_toTopOf="@+id/viewHeaderBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            style="@style/itemRecolectionInfo"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:background="@color/Thunderbird"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="jueves, agosto 10 del 2023" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewHeaderBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border_radius_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime"
                style="@style/tvItem"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hora: 00:00" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                style="@style/tvItem"
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTime"
                tools:text="Precio: $8000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFeending"
                style="@style/tvItem"
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/guideline17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice"
                tools:text="Alimentacion: no" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKgDetail"
            style="@style/texViewKg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/tvKg"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tvDate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKgTxt"
            style="@style/texViewKg"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="@string/recolection"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/tvKgDetail"
            app:layout_constraintStart_toStartOf="@+id/tvKgDetail"
            app:layout_constraintTop_toBottomOf="@+id/tvKgDetail" />

        <Button
            android:id="@+id/btnUpdate"
            style="@style/buttons"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_radius_btn"
            android:text="@string/update"
            android:textColor="@color/Thunderbird"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewHeaderBackground"
            app:layout_constraintTop_toBottomOf="@+id/tvKgTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

