<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCollectionDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Thunderbird">

        <ImageView
            android:id="@+id/image"
            style="@style/itemRecolectionInfo"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:src="@mipmap/ic_cafe_image"
            android:background="@color/Thunderbird"
            app:layout_constraintBottom_toBottomOf="@+id/tvNameCollector3"
            app:layout_constraintEnd_toStartOf="@+id/guidelineImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvNameCollector3"
            style="@style/itemRecolectionInfo"
            android:background="@color/Thunderbird"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:text="@string/cvKg"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineImage"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <View
            android:id="@+id/viewHeaderBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border_radius_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCollector3" />

        <TextView
            android:id="@+id/tvNameCollector"
            style="@style/tvItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/tvTime"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCollector3"
            tools:text="Fecha" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/tvItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDate"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Hora" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/tvItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/tvFeending"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Precio" />

        <TextView
            android:id="@+id/tvFeending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comfortaa"
            android:padding="1dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/tvFeend" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <TextView
            android:id="@+id/tvKgDetail"
            style="@style/texViewKg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tvKg"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewHeaderBackground"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCollector3" />

        <TextView
            android:id="@+id/tvKgTxt"
            style="@style/texViewKg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tvKgtxt"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewHeaderBackground"
            app:layout_constraintTop_toBottomOf="@+id/tvKgDetail" />

        <Button
            android:id="@+id/btnUpdate"
            style="@style/buttons"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/border_radius_btn"
            android:textColor="@color/Thunderbird"
            android:text="@string/update"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewHeaderBackground"
            app:layout_constraintTop_toBottomOf="@+id/tvKgTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

