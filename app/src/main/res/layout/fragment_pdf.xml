<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ligth_Green"
    tools:context=".fragments.FragmentPdf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/gray_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/imgViewInfoWeek"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:background="@color/Hippie_Green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imgViewInfoWeek1"
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imgViewInfoWeek2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="12dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imgViewInfoWeek"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoWeek"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoWeek"
                    app:layout_constraintTop_toTopOf="@+id/imgViewInfoWeek" />


                <TextView
                    android:id="@+id/textView"
                    style="@style/texViewAlertInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/IWeek"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintTop_toTopOf="@+id/imgViewInfoWeek2"/>


                <TextView
                    android:id="@+id/tvNoAliment"
                    style="@style/texViewDescriptionInformed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/IWeekDescription"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoWeek2"/>

                <Button
                    android:id="@+id/btIWeek"
                    style="@style/buttonsInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/border_radius_btn"
                    android:text="@string/create"
                    app:layout_constraintBottom_toBottomOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoWeek2"
                    app:layout_constraintTop_toBottomOf="@+id/tvNoAliment" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:cardBackgroundColor="@color/gray_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/imageView0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:background="@color/Hippie_Green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="12dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView0"
                    app:layout_constraintEnd_toEndOf="@+id/imageView0"
                    app:layout_constraintStart_toStartOf="@+id/imageView0"
                    app:layout_constraintTop_toTopOf="@+id/imageView0" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/texViewAlertInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/IMonth"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView1"
                    app:layout_constraintStart_toStartOf="@+id/imageView1"
                    app:layout_constraintTop_toTopOf="@+id/imageView1" />

                <TextView
                    android:id="@+id/tvYesAliment"
                    style="@style/texViewDescriptionInformed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/IMonthDescription"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView1"
                    app:layout_constraintStart_toStartOf="@+id/imageView1"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <Button
                    android:id="@+id/btnInforme"
                    style="@style/buttonsInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/create"
                    android:background="@drawable/border_radius_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                    app:layout_constraintEnd_toEndOf="@+id/imageView1"
                    app:layout_constraintStart_toStartOf="@+id/imageView1"
                    app:layout_constraintTop_toBottomOf="@+id/tvYesAliment" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/gray_light"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/imgViewInfoYear"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:background="@color/Hippie_Green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imgViewInfoYear1"
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/imgViewInfoYear2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="12dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imgViewInfoYear"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoYear"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoYear"
                    app:layout_constraintTop_toTopOf="@+id/imgViewInfoYear" />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/texViewAlertInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/IYear"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoYear2"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoYear2"
                    app:layout_constraintTop_toTopOf="@+id/imgViewInfoYear2" />

                <TextView
                    android:id="@+id/tv"
                    style="@style/texViewDescriptionInformed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/IYearDescription"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoYear2"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoYear2"/>

                <Button
                    android:id="@+id/btCreateYear"
                    style="@style/buttonsInformed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/create"
                    android:background="@drawable/border_radius_btn"
                    app:layout_constraintTop_toBottomOf="@+id/tv"
                    app:layout_constraintBottom_toBottomOf="@+id/imgViewInfoYear2"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewInfoYear2"
                    app:layout_constraintStart_toStartOf="@+id/imgViewInfoYear2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>