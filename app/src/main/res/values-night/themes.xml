<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppRecconProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/Dark_Tan</item>
        <item name="colorPrimaryVariant">@color/Thunderbird</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="colorSecondary">@color/Tom_Thumb</item>
        <item name="colorSecondaryVariant">@color/Hippie_Green</item>
    </style>

    <!--splash theme. -->
    <style name="Theme.AppRecconProject.splash" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--informed theme-->
    <style name="Theme.AppRecconProject.informes" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/Tom_Thumb</item>
        <item name="colorPrimaryVariant">@color/Hippie_Green</item>
        <item name="android:statusBarColor">@color/Tom_Thumb</item>

        <item name="colorSecondary">@color/Hippie_Green</item>
        <item name="colorSecondaryVariant">@color/Tom_Thumb</item>
    </style>

    <!--title info informed theme-->
    <style name="infoTitleInformed">
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/Tom_Thumb</item>
    </style>

    <!--layout informed theme-->
    <style name="layoutInformed">
        <item name="android:background">@color/Tom_Thumb</item>
    </style>

    <!--buttons theme-->
    <style name="buttons">
        <item name="android:background">@drawable/border_radius_btn</item>
        <item name="android:backgroundTint">@color/Dark_Tan</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--buttonMain theme-->
    <style name="buttonMain">
        <item name="android:background">@drawable/border_radius_btn</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/Dark_Tan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--layout theme-->
    <style name="layout">
        <item name="android:background">@color/Dark_Tan</item>
    </style>

    <!--layout collection theme-->
    <style name="layoutCollection">
        <item name="android:background">@color/dark</item>
    </style>

    <!--scroll theme-->
    <style name="scroll">
        <item name="android:background">@drawable/background_main</item>
        <item name="android:backgroundTint">@color/dark</item>
    </style>


    <!--text theme-->
    <style name="text">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--item info theme-->
    <style name="infoItem">
        <item name="android:background">@drawable/border_radius_item</item>
        <item name="android:backgroundTint">@color/dark </item>
    </style>

    <!--image theme-->
    <style name="image">
        <item name="android:tint">@color/white</item>
    </style>

    <!--title info theme-->
    <style name="infoTitle">
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/Dark_Tan</item>
    </style>

    <!--item theme-->
    <style name="item">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <!--bar theme-->
    <style name="bar">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="texViewAlert">
        <item name="android:background">@color/Dark_Tan</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texViewAlertMessague">
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texViewDescription">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="texViewAlertInformed">
        <item name="android:background">@color/Tom_Thumb</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonsInformed">
        <item name="android:backgroundTint">@color/Tom_Thumb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="foadingButtonsInformed">
        <item name="android:backgroundTint">@color/Tom_Thumb</item>
    </style>

    <style name="texViewDescriptionInformed">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="foadingButtons">
        <item name="android:backgroundTint">@color/Thunderbird</item>
    </style>

    <style name="tvItem">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>